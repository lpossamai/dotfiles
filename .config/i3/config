# ssh agent / keyring
exec --no-startup-id compton
exec --no-startup-id pcloud
exec --no-startup-id ~/.dotfiles/scripts/background-changer

exec_always ~/.config/i3/scripts/gnome-keyring.sh
exec autolock -time 15 -locker '~/.config/i3/scripts/lock-screen.sh' & 

